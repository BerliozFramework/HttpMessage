{
  "name": "berlioz/http-message",
  "description": "Berlioz HTTP Message is a PHP library whose implements PSR-7 (HTTP message interfaces) and PSR-17 (HTTP Factories) standards.",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Http\\Message\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Http\\Message\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-fileinfo": "*",
    "berlioz/helpers": "^1.5",
    "psr/http-message": "^1.0 || ^2.0",
    "psr/http-factory": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "http-interop/http-factory-tests": "^0.7"
  },
  "suggest": {
    "ext-zlib": "To use GzStream"
  },
  "provide": {
    "psr/http-message-implementation": "^1.0",
    "psr/http-factory-implementation": "^1.0"
  }
}
